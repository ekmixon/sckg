<def-group>

  

  

  <definition class="compliance" id="service_telnet_disabled"
  version="1">
    <metadata>
      <title>Service telnet Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The telnet service should be disabled if possible.</description>
    </metadata>
   <criteria comment="package telnet removed or service telnet is not configured to start" operator="OR">
    <criterion comment="telnet removed" test_ref="test_service_telnet_package_telnet_removed" />
    <criteria operator="AND" comment="service telnet is not configured to start">
      <criterion comment="telnet runlevel 0" test_ref="test_runlevel0_telnet_off" />
      <criterion comment="telnet runlevel 1" test_ref="test_runlevel1_telnet_off" />
      <criterion comment="telnet runlevel 2" test_ref="test_runlevel2_telnet_off" />
      <criterion comment="telnet runlevel 3" test_ref="test_runlevel3_telnet_off" />
      <criterion comment="telnet runlevel 4" test_ref="test_runlevel4_telnet_off" />
      <criterion comment="telnet runlevel 5" test_ref="test_runlevel5_telnet_off" />
      <criterion comment="telnet runlevel 6" test_ref="test_runlevel6_telnet_off" />
    </criteria>
    </criteria>
  </definition>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel0_telnet_off"
  version="2">
    <unix:object object_ref="obj_runlevel0_telnet_off" />
    <unix:state state_ref="state_service_telnet_off" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
