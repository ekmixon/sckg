<def-group>
  <definition class="compliance"
  id="kernel_module_atm_disabled" version="1">
    <metadata>
      <title>Disable atm Kernel Module</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The kernel module atm should be disabled.</description>
    </metadata>
    <criteria operator="OR">
      <criterion test_ref="test_kernmod_atm_disabled" comment="kernel module atm disabled in /etc/modprobe.d" />
      <criterion test_ref="test_kernmod_atm_modprobeconf" comment="kernel module atm disabled in /etc/modprobe.conf" />



    </criteria>
  </definition>

  <ind:textfilecontent54_test id="test_kernmod_atm_disabled" version="1" check="all"
  comment="kernel module atm disabled">
    <ind:object object_ref="obj_kernmod_atm_disabled" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_test id="test_kernmod_atm_modprobeconf" version="1" check="all"
  comment="kernel module atm disabled in /etc/modprobe.conf">
    <ind:object object_ref="obj_kernmod_atm_modprobeconf" />
  </ind:textfilecontent54_test>



  <ind:textfilecontent54_object id="obj_kernmod_atm_disabled"
  version="1" comment="kernel module atm disabled">
    <ind:path>/etc/modprobe.d</ind:path>
    <ind:filename operation="pattern match">^.*\.conf$</ind:filename>
    <ind:pattern operation="pattern match">^\s*install\s+atm\s+(/bin/false|/bin/true)$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_object id="obj_kernmod_atm_modprobeconf"
  version="1" comment="Check deprecated /etc/modprobe.conf for disablement of atm">
    <ind:filepath>/etc/modprobe.conf</ind:filepath>
    <ind:pattern operation="pattern match">^\s*install\s+atm\s+(/bin/false|/bin/true)$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>



</def-group>