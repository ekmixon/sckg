    <criterion comment="rsh-server removed" test_ref="test_service_rlogin_package_rsh-server_removed" />
    <criteria operator="AND" comment="service rlogin is not configured to start">
      <criterion comment="rlogin runlevel 0" test_ref="test_runlevel0_rlogin_off" />
      <criterion comment="rlogin runlevel 1" test_ref="test_runlevel1_rlogin_off" />
      <criterion comment="rlogin runlevel 2" test_ref="test_runlevel2_rlogin_off" />
      <criterion comment="rlogin runlevel 3" test_ref="test_runlevel3_rlogin_off" />
