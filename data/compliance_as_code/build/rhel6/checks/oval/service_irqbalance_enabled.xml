<def-group>

  <definition class="compliance" id="service_irqbalance_enabled"
  version="1">
    <metadata>
      <title>Service irqbalance Enabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The irqbalance service should be enabled if possible.</description>
    </metadata>
    <criteria comment="package irqbalance installed and service irqbalance is configured to start" operator="AND">
    <criterion comment="irqbalance installed" test_ref="test_service_irqbalance_package_irqbalance_installed" />
    <criteria operator="OR" comment="service irqbalance is configured to start">
      <criterion comment="irqbalance runlevel 0" test_ref="test_runlevel0_irqbalance_on" />
      <criterion comment="irqbalance runlevel 1" test_ref="test_runlevel1_irqbalance_on" />
      <criterion comment="irqbalance runlevel 2" test_ref="test_runlevel2_irqbalance_on" />
      <criterion comment="irqbalance runlevel 3" test_ref="test_runlevel3_irqbalance_on" />
      <criterion comment="irqbalance runlevel 4" test_ref="test_runlevel4_irqbalance_on" />
      <criterion comment="irqbalance runlevel 5" test_ref="test_runlevel5_irqbalance_on" />
      <criterion comment="irqbalance runlevel 6" test_ref="test_runlevel6_irqbalance_on" />
    </criteria>
    </criteria>
  </definition>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel0_irqbalance_on"
  version="2">
    <unix:object object_ref="obj_runlevel0_irqbalance_on" />
    <unix:state state_ref="state_service_irqbalance_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel1_irqbalance_on"
  version="2">
    <unix:object object_ref="obj_runlevel1_irqbalance_on" />
    <unix:state state_ref="state_service_irqbalance_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel2_irqbalance_on"
  version="2">
    <unix:object object_ref="obj_runlevel2_irqbalance_on" />
    <unix:state state_ref="state_service_irqbalance_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel3_irqbalance_on"
  version="2">
    <unix:object object_ref="obj_runlevel3_irqbalance_on" />
    <unix:state state_ref="state_service_irqbalance_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel4_irqbalance_on"
  version="2">
    <unix:object object_ref="obj_runlevel4_irqbalance_on" />
    <unix:state state_ref="state_service_irqbalance_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel5_irqbalance_on"
  version="2">
    <unix:object object_ref="obj_runlevel5_irqbalance_on" />
    <unix:state state_ref="state_service_irqbalance_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel6_irqbalance_on"
  version="2">
    <unix:object object_ref="obj_runlevel6_irqbalance_on" />
    <unix:state state_ref="state_service_irqbalance_on" />
  </unix:runlevel_test>
  <unix:runlevel_object id="obj_runlevel0_irqbalance_on" version="1">
    <unix:service_name>irqbalance</unix:service_name>
    <unix:runlevel operation="equals">0</unix:runlevel>
  </unix:runlevel_object>
  <unix:runlevel_object id="obj_runlevel1_irqbalance_on" version="1">
    <unix:service_name>irqbalance</unix:service_name>
    <unix:runlevel operation="equals">1</unix:runlevel>
  </unix:runlevel_object>
  <unix:runlevel_object id="obj_runlevel2_irqbalance_on" version="1">
    <unix:service_name>irqbalance</unix:service_name>
    <unix:runlevel operation="equals">2</unix:runlevel>
  </unix:runlevel_object>
  <unix:runlevel_object id="obj_runlevel3_irqbalance_on" version="1">
    <unix:service_name>irqbalance</unix:service_name>
    <unix:runlevel operation="equals">3</unix:runlevel>
  </unix:runlevel_object>
  <unix:runlevel_object id="obj_runlevel4_irqbalance_on" version="1">
    <unix:service_name>irqbalance</unix:service_name>
    <unix:runlevel operation="equals">4</unix:runlevel>
  </unix:runlevel_object>
  <unix:runlevel_object id="obj_runlevel5_irqbalance_on" version="1">
    <unix:service_name>irqbalance</unix:service_name>
    <unix:runlevel operation="equals">5</unix:runlevel>
  </unix:runlevel_object>
  <unix:runlevel_object id="obj_runlevel6_irqbalance_on" version="1">
    <unix:service_name>irqbalance</unix:service_name>
    <unix:runlevel operation="equals">6</unix:runlevel>
  </unix:runlevel_object>
  <unix:runlevel_state comment="configured to start" id="state_service_irqbalance_on" version="1">
    <unix:start datatype="boolean">true</unix:start>
    <unix:kill datatype="boolean">false</unix:kill>
  </unix:runlevel_state>



  <linux:rpminfo_test check="all" check_existence="all_exist"
  id="test_service_irqbalance_package_irqbalance_installed" version="1"
  comment="package irqbalance is installed">
    <linux:object object_ref="obj_test_service_irqbalance_package_irqbalance_installed" />
    
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_irqbalance_package_irqbalance_installed" version="1">
    <linux:name>irqbalance</linux:name>
  </linux:rpminfo_object>
  

</def-group>