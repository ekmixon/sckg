<def-group>

  <definition class="compliance" id="service_restorecond_enabled"
  version="1">
    <metadata>
      <title>Service restorecond Enabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The restorecond service should be enabled if possible.</description>
    </metadata>
    <criteria comment="package policycoreutils installed and service restorecond is configured to start" operator="AND">
    <criterion comment="policycoreutils installed" test_ref="test_service_restorecond_package_policycoreutils_installed" />
    <criteria operator="OR" comment="service restorecond is configured to start">
      <criterion comment="restorecond runlevel 0" test_ref="test_runlevel0_restorecond_on" />
      <criterion comment="restorecond runlevel 1" test_ref="test_runlevel1_restorecond_on" />
      <criterion comment="restorecond runlevel 2" test_ref="test_runlevel2_restorecond_on" />
      <criterion comment="restorecond runlevel 3" test_ref="test_runlevel3_restorecond_on" />
      <criterion comment="restorecond runlevel 4" test_ref="test_runlevel4_restorecond_on" />
      <criterion comment="restorecond runlevel 5" test_ref="test_runlevel5_restorecond_on" />
      <criterion comment="restorecond runlevel 6" test_ref="test_runlevel6_restorecond_on" />
    </criteria>
    </criteria>
  </definition>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel0_restorecond_on"
  version="2">
    <unix:object object_ref="obj_runlevel0_restorecond_on" />
    <unix:state state_ref="state_service_restorecond_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
