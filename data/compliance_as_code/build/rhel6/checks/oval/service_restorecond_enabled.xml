  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel6_restorecond_on"
  version="2">
    <unix:object object_ref="obj_runlevel6_restorecond_on" />
    <unix:state state_ref="state_service_restorecond_on" />
  </unix:runlevel_test>
  <unix:runlevel_object id="obj_runlevel0_restorecond_on" version="1">
