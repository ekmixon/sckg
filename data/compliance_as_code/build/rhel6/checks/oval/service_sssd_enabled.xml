<def-group>

  <definition class="compliance" id="service_sssd_enabled"
  version="1">
    <metadata>
      <title>Service sssd Enabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The sssd service should be enabled if possible.</description>
    </metadata>
    <criteria comment="package sssd installed and service sssd is configured to start" operator="AND">
    <criterion comment="sssd installed" test_ref="test_service_sssd_package_sssd_installed" />
    <criteria operator="OR" comment="service sssd is configured to start">
      <criterion comment="sssd runlevel 0" test_ref="test_runlevel0_sssd_on" />
      <criterion comment="sssd runlevel 1" test_ref="test_runlevel1_sssd_on" />
      <criterion comment="sssd runlevel 2" test_ref="test_runlevel2_sssd_on" />
      <criterion comment="sssd runlevel 3" test_ref="test_runlevel3_sssd_on" />
      <criterion comment="sssd runlevel 4" test_ref="test_runlevel4_sssd_on" />
      <criterion comment="sssd runlevel 5" test_ref="test_runlevel5_sssd_on" />
      <criterion comment="sssd runlevel 6" test_ref="test_runlevel6_sssd_on" />
    </criteria>
    </criteria>
  </definition>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel0_sssd_on"
  version="2">
    <unix:object object_ref="obj_runlevel0_sssd_on" />
    <unix:state state_ref="state_service_sssd_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel1_sssd_on"
  version="2">
    <unix:object object_ref="obj_runlevel1_sssd_on" />
    <unix:state state_ref="state_service_sssd_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel2_sssd_on"
  version="2">
    <unix:object object_ref="obj_runlevel2_sssd_on" />
    <unix:state state_ref="state_service_sssd_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel3_sssd_on"
  version="2">
    <unix:object object_ref="obj_runlevel3_sssd_on" />
    <unix:state state_ref="state_service_sssd_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel4_sssd_on"
  version="2">
    <unix:object object_ref="obj_runlevel4_sssd_on" />
    <unix:state state_ref="state_service_sssd_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel5_sssd_on"
  version="2">
    <unix:object object_ref="obj_runlevel5_sssd_on" />
    <unix:state state_ref="state_service_sssd_on" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel6_sssd_on"
  version="2">
    <unix:object object_ref="obj_runlevel6_sssd_on" />
    <unix:state state_ref="state_service_sssd_on" />
  </unix:runlevel_test>
  <unix:runlevel_object id="obj_runlevel0_sssd_on" version="1">
    <unix:service_name>sssd</unix:service_name>
    <unix:runlevel operation="equals">0</unix:runlevel>
  </unix:runlevel_object>
  <unix:runlevel_object id="obj_runlevel1_sssd_on" version="1">
    <unix:service_name>sssd</unix:service_name>
    <unix:runlevel operation="equals">1</unix:runlevel>
  </unix:runlevel_object>
  <unix:runlevel_object id="obj_runlevel2_sssd_on" version="1">
    <unix:service_name>sssd</unix:service_name>
    <unix:runlevel operation="equals">2</unix:runlevel>
  </unix:runlevel_object>
  <unix:runlevel_object id="obj_runlevel3_sssd_on" version="1">
    <unix:service_name>sssd</unix:service_name>
    <unix:runlevel operation="equals">3</unix:runlevel>
  </unix:runlevel_object>
  <unix:runlevel_object id="obj_runlevel4_sssd_on" version="1">
    <unix:service_name>sssd</unix:service_name>
    <unix:runlevel operation="equals">4</unix:runlevel>
  </unix:runlevel_object>
  <unix:runlevel_object id="obj_runlevel5_sssd_on" version="1">
    <unix:service_name>sssd</unix:service_name>
    <unix:runlevel operation="equals">5</unix:runlevel>
  </unix:runlevel_object>
  <unix:runlevel_object id="obj_runlevel6_sssd_on" version="1">
    <unix:service_name>sssd</unix:service_name>
    <unix:runlevel operation="equals">6</unix:runlevel>
  </unix:runlevel_object>
  <unix:runlevel_state comment="configured to start" id="state_service_sssd_on" version="1">
    <unix:start datatype="boolean">true</unix:start>
    <unix:kill datatype="boolean">false</unix:kill>
  </unix:runlevel_state>



  <linux:rpminfo_test check="all" check_existence="all_exist"
  id="test_service_sssd_package_sssd_installed" version="1"
  comment="package sssd is installed">
    <linux:object object_ref="obj_test_service_sssd_package_sssd_installed" />
    
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_sssd_package_sssd_installed" version="1">
    <linux:name>sssd</linux:name>
  </linux:rpminfo_object>
  

</def-group>