<def-group>

  

  

  <definition class="compliance" id="service_rhnsd_disabled"
  version="1">
    <metadata>
      <title>Service rhnsd Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The rhnsd service should be disabled if possible.</description>
    </metadata>
   <criteria comment="package rhnsd removed or service rhnsd is not configured to start" operator="OR">
    <criterion comment="rhnsd removed" test_ref="test_service_rhnsd_package_rhnsd_removed" />
    <criteria operator="AND" comment="service rhnsd is not configured to start">
      <criterion comment="rhnsd runlevel 0" test_ref="test_runlevel0_rhnsd_off" />
      <criterion comment="rhnsd runlevel 1" test_ref="test_runlevel1_rhnsd_off" />
      <criterion comment="rhnsd runlevel 2" test_ref="test_runlevel2_rhnsd_off" />
      <criterion comment="rhnsd runlevel 3" test_ref="test_runlevel3_rhnsd_off" />
      <criterion comment="rhnsd runlevel 4" test_ref="test_runlevel4_rhnsd_off" />
      <criterion comment="rhnsd runlevel 5" test_ref="test_runlevel5_rhnsd_off" />
      <criterion comment="rhnsd runlevel 6" test_ref="test_runlevel6_rhnsd_off" />
    </criteria>
    </criteria>
  </definition>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel0_rhnsd_off"
  version="2">
    <unix:object object_ref="obj_runlevel0_rhnsd_off" />
    <unix:state state_ref="state_service_rhnsd_off" />
  </unix:runlevel_test>
  <unix:runlevel_test check="all" check_existence="any_exist"
