<def-group>

  

  

  <definition class="compliance" id="service_autofs_disabled"
  version="1">
    <metadata>
      <title>Service autofs Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The autofs service should be disabled if possible.</description>
    </metadata>
   <criteria comment="package autofs removed or service autofs is not configured to start" operator="OR">
    <criterion comment="autofs removed" test_ref="test_service_autofs_package_autofs_removed" />
    <criteria operator="AND" comment="service autofs is not configured to start">
      <criterion comment="autofs runlevel 0" test_ref="test_runlevel0_autofs_off" />
      <criterion comment="autofs runlevel 1" test_ref="test_runlevel1_autofs_off" />
      <criterion comment="autofs runlevel 2" test_ref="test_runlevel2_autofs_off" />
      <criterion comment="autofs runlevel 3" test_ref="test_runlevel3_autofs_off" />
      <criterion comment="autofs runlevel 4" test_ref="test_runlevel4_autofs_off" />
      <criterion comment="autofs runlevel 5" test_ref="test_runlevel5_autofs_off" />
      <criterion comment="autofs runlevel 6" test_ref="test_runlevel6_autofs_off" />
    </criteria>
    </criteria>
  </definition>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel0_autofs_off"
  version="2">
