<def-group>

  

  

  <definition class="compliance" id="service_smartd_disabled"
  version="1">
    <metadata>
      <title>Service smartd Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The smartd service should be disabled if possible.</description>
    </metadata>
   <criteria comment="package smartmontools removed or service smartd is not configured to start" operator="OR">
    <criterion comment="smartmontools removed" test_ref="test_service_smartd_package_smartmontools_removed" />
    <criteria operator="AND" comment="service smartd is not configured to start">
      <criterion comment="smartd runlevel 0" test_ref="test_runlevel0_smartd_off" />
      <criterion comment="smartd runlevel 1" test_ref="test_runlevel1_smartd_off" />
      <criterion comment="smartd runlevel 2" test_ref="test_runlevel2_smartd_off" />
      <criterion comment="smartd runlevel 3" test_ref="test_runlevel3_smartd_off" />
      <criterion comment="smartd runlevel 4" test_ref="test_runlevel4_smartd_off" />
