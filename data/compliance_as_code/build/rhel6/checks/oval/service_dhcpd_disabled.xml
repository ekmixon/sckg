<def-group>

  

  

  <definition class="compliance" id="service_dhcpd_disabled"
  version="1">
    <metadata>
      <title>Service dhcpd Disabled</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>The dhcpd service should be disabled if possible.</description>
    </metadata>
   <criteria comment="package dhcp removed or service dhcpd is not configured to start" operator="OR">
    <criterion comment="dhcp removed" test_ref="test_service_dhcpd_package_dhcp_removed" />
    <criteria operator="AND" comment="service dhcpd is not configured to start">
      <criterion comment="dhcpd runlevel 0" test_ref="test_runlevel0_dhcpd_off" />
      <criterion comment="dhcpd runlevel 1" test_ref="test_runlevel1_dhcpd_off" />
      <criterion comment="dhcpd runlevel 2" test_ref="test_runlevel2_dhcpd_off" />
      <criterion comment="dhcpd runlevel 3" test_ref="test_runlevel3_dhcpd_off" />
      <criterion comment="dhcpd runlevel 4" test_ref="test_runlevel4_dhcpd_off" />
      <criterion comment="dhcpd runlevel 5" test_ref="test_runlevel5_dhcpd_off" />
      <criterion comment="dhcpd runlevel 6" test_ref="test_runlevel6_dhcpd_off" />
    </criteria>
    </criteria>
  </definition>
  <unix:runlevel_test check="all" check_existence="any_exist"
  comment="Runlevel test" id="test_runlevel0_dhcpd_off"
  version="2">
    <unix:object object_ref="obj_runlevel0_dhcpd_off" />
    <unix:state state_ref="state_service_dhcpd_off" />
  </unix:runlevel_test>
